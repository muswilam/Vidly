@model Vidly.Models.Customer

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Customer</h4>
    <hr />
    <dl class="dl-horizontal">
        <dd>
            <h2>@Model.Name</h2>
        </dd>
        <dd>
            Membership Type : @Model.MemberShipType.Name
        </dd>
        @if(@Model.BirthDate != null)
        {
            <dd>
                Birthdate : @Model.BirthDate
            </dd>
        }else {
            <dd>

            </dd>
        }
    </dl>
</div>
