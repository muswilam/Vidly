@model Vidly.Models.Customer

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Profile</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dd>
            <h2>@Model.Name</h2>
        </dd>
        <dd>
            Membership Type : @Model.MembershipType.Name
        </dd>
        
        @if (@Model.BirthDate != null)
        {
            <dd>
                Birthdate : @Model.BirthDate
            </dd>
        }
        else
        {
            <dd>

            </dd>
        }
    </dl>
</div>
