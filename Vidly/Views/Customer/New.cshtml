@model Vidly.Models.Customer

@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>

@using(Html.BeginForm("Create" , "Customer"))
{
    
    <div class="form-group">
        @Html.LabelFor(model => model.Name) :
        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
    </div>
    
    <div class="form-group">
        @Html.LabelFor(model => model.BirthDate) :
        @Html.TextBoxFor(model => model.BirthDate, new { @class = "form-control" })
    </div>

    <div class="form-check">
        @Html.CheckBoxFor(model => model.IsSubscribedToNewsLetter)
        <label class="form-check-label" for="exampleCheck1">Subscribed To News Letter</label>
    </div>
}